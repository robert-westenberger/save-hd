{
  "manifest_version": 3,
  "name": "Save HD",
  "version": "1.0",
  "description": "Automatically upscale images on save.",
  "permissions": ["activeTab", "contextMenus"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
